<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="ShieldBase_MT">
    <defName>Apparel_HeaterShield</defName>
    <label>heater shield</label>
    <description>A medium-sized metal shield that excels in protecting the user from both melee and ranged attacks without being too unwieldy for close-quarters combat.</description>
    <techLevel>Medieval</techLevel>
    <graphicData>
      <texPath>Things/Shields/KiteShield/MedTimes_KiteShield</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <costStuffCount>75</costStuffCount>
    <stuffCategories>
      <li>Steeled</li>
    </stuffCategories>
	    <recipeMaker>
      <recipeUsers>
        <li>MedTimes_BlacksmithForgeTierTwo</li>
      </recipeUsers>
    </recipeMaker>
    <statBases>
      <WorkToMake>9500</WorkToMake>
      <MaxHitPoints>125</MaxHitPoints>
      <ArmorRating_Blunt>0.22</ArmorRating_Blunt>
      <ArmorRating_Sharp>0.3</ArmorRating_Sharp>
      <Mass>7</Mass>
      <Bulk>10</Bulk>
      <WornBulk>5</WornBulk>
    </statBases>
    <equippedStatOffsets>
      <ReloadSpeed>-0.1</ReloadSpeed>
      <MeleeHitChance>-1</MeleeHitChance>
      <ShootingAccuracyPawn>-0.2</ShootingAccuracyPawn>
      <AimingAccuracy>-0.1</AimingAccuracy>
      <Suppressability>-0.35</Suppressability>
      <MeleeCritChance>-0.1</MeleeCritChance>
      <MeleeParryChance>1.15</MeleeParryChance>
    </equippedStatOffsets>
	<tradeTags>	
		<li>MedTimes_Armour</li>
	</tradeTags>
    <apparel>
      <tags>
        <li>HeaterShield</li>
      </tags>
      <careIfWornByCorpse>false</careIfWornByCorpse>
      <bodyPartGroups>
        <li>LeftArm</li>
      </bodyPartGroups>
	  <layers>
        <li>Belt</li>
	  </layers>
    </apparel>
	<storedConceptLearnOpportunity>CE_Shields</storedConceptLearnOpportunity>
    <modExtensions>
      <li Class="CombatExtended.ShieldDefExtension">
        <shieldCoverage>
          <li>Hands</li>
          <li>Arms</li>
          <li>Shoulders</li>
          <li>Torso</li>
          <li>Neck</li>
        </shieldCoverage>
      </li>
    </modExtensions>
  </ThingDef>

</Defs>
