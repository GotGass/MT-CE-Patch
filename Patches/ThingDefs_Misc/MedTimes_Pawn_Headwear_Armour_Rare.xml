<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<!-- ========== Mass Stat Removal ========== -->
	<Operation Class="PatchOperationRemove">
		<xpath>/Defs/ThingDef[@Name="MedTimes_Helm_Rare"]/statBases/Mass</xpath>
	</Operation>
	<!-- ========== (Artifact) Helmets ========== -->
	<Operation Class="PatchOperationAdd">
		<xpath>/Defs/ThingDef[@Name="MedTimes_Helm_Rare"]/statBases</xpath>
		<value>
			<Bulk>2</Bulk>
			<WornBulk>1.5</WornBulk>
			<Mass>2</Mass>
		</value>
	</Operation>
</Patch>