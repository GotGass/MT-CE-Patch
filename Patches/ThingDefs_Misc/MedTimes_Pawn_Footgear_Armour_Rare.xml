<?xml version="1.0" encoding="utf-8" ?>
<Patch>

	<Operation Class="PatchOperationSequence">
		<operations>
			<li Class="CombatExtended.PatchOperationFindMod">
				<modName>Medieval Times</modName>
			</li>
			<!-- ========== Mass Stat Removal ========== -->
			<li Class="PatchOperationRemove">
				<xpath>/Defs/ThingDef[@Name="MedTimes_FootArmour_Rare"]/statBases/Mass</xpath>
			</li>
			<!-- ========== (Artifact) Foot Accessories ========== -->
			<li Class="PatchOperationAdd">
				<xpath>/Defs/ThingDef[@Name="MedTimes_FootArmour_Rare"]/statBases</xpath>
				<value>
					<Bulk>3</Bulk>
					<WornBulk>2.5</WornBulk>
					<Mass>2.5</Mass>
				</value>
			</li>
		</operations>
	</Operation>

</Patch>