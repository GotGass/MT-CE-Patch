<?xml version="1.0" encoding="utf-8" ?>

<Patch>

  
     <!-- ========== Armor Vest Changes ========== -->
  
    <Operation Class="PatchOperationReplace">
  	<xpath>/Defs/ThingDef[defName="Apparel_MeleeShield"]/techLevel</xpath>
    <value>
      <techLevel>Medieval</techLevel>
    </value>
  </Operation>
  
     <Operation Class="PatchOperationReplace">
  	<xpath>/Defs/ThingDef[defName="Apparel_MeleeShield"]/label</xpath>
    <value>
      <label>buckler shield</label>
    </value>
  </Operation>
  
     <!-- ========== Make Armor Craftable At Smithy ========== -->
  
      <Operation Class="PatchOperationReplace">
  	<xpath>/Defs/ThingDef[defName="Apparel_MeleeShield"]/statBases</xpath>
		<value>
			<statBases>
              <WorkToMake>9500</WorkToMake>
              <MaxHitPoints>125</MaxHitPoints>
              <ArmorRating_Blunt>0.15</ArmorRating_Blunt>
              <ArmorRating_Sharp>0.2</ArmorRating_Sharp>
              <Mass>3</Mass>
              <Bulk>5</Bulk>
              <WornBulk>3</WornBulk>
            </statBases>
		</value>
	</Operation>
	

   
</Patch>