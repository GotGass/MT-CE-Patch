<Patch>
	<!-- ========== Mass Stat Removal ========== -->
	<!-- <Operation Class="PatchOperationRemove"> -->
		<!-- <xpath>/Defs/ThingDef[@Name="MedTimes_Helmet"]/statBases/Mass</xpath> -->
