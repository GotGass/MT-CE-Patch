<?xml version="1.0" encoding="utf-8" ?>
<Patch>

	<Operation Class="PatchOperationSequence">
		<operations>
			<li Class="CombatExtended.PatchOperationFindMod">
				<modName>Medieval Times</modName>
			</li>
			<!-- ========== Mass Stat Removal ========== -->
			<li Class="PatchOperationRemove">
				<xpath>/Defs/ThingDef[@Name="MedTimes_BodyArmour_Rare"]/statBases/Mass</xpath>
			</li>
			<!-- ==========  Stat Offset Removal ========== -->
			<li Class="PatchOperationRemove">
				<xpath>/Defs/ThingDef[@Name="MedTimes_BodyArmour_Rare"]/equippedStatOffsets</xpath>
			</li>
			<!-- ========== (Artifact) Body Armours ========== -->
			<li Class="PatchOperationAdd">
				<xpath>/Defs/ThingDef[@Name="MedTimes_BodyArmour_Rare"]/statBases</xpath>
				<value>
					  <Bulk>10</Bulk>
					  <WornBulk>5</WornBulk>
					  <Mass>10</Mass>
				</value>
			</li>
		</operations>
	</Operation>

</Patch>