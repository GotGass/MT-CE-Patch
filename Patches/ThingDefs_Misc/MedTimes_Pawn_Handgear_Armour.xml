<?xml version="1.0" encoding="utf-8" ?>
<Patch>

	<Operation Class="PatchOperationSequence">
		<operations>
			<li Class="CombatExtended.PatchOperationFindMod">
				<modName>Medieval Times</modName>
			</li>
			<!-- ========== Mass Stat Removal ========== -->
			<li Class="PatchOperationRemove">
				<xpath>/Defs/ThingDef[@Name="MedTimes_HandArmour"]/statBases/Mass</xpath>
			</li>
			<!-- ========== Tier 0 Class ========== -->
			<li Class="PatchOperationAdd">
				<xpath>/Defs/ThingDef[@Name="MedTimes_HandArmour_T0_L"]/statBases</xpath>
				<value>
					<Bulk>1</Bulk>
					<WornBulk>0.75</WornBulk>
					<Mass>1</Mass>
				</value>
			</li>
			<!-- ========== Tier 1 Class (Light) ========== -->
			<li Class="PatchOperationAdd">
				<xpath>/Defs/ThingDef[@Name="MedTimes_HandArmour_T1_L"]/statBases</xpath>
				<value>
					<Bulk>2</Bulk>
					<WornBulk>1</WornBulk>
					<Mass>2</Mass>
				</value>
			</li>
			<!-- ========== Tier 1 Class (Heavy) ========== -->
			<li Class="PatchOperationAdd">
				<xpath>/Defs/ThingDef[@Name="MedTimes_HandArmour_T1_H"]/statBases</xpath>
				<value>
					<Bulk>3</Bulk>
					<WornBulk>1.5</WornBulk>
					<Mass>3</Mass>
				</value>
			</li>
			<!-- ========== Tier 2 Class (Light) ========== -->
			<li Class="PatchOperationAdd">
				<xpath>/Defs/ThingDef[@Name="MedTimes_HandArmour_T2_L"]/statBases</xpath>
				<value>
					<Bulk>2</Bulk>
					<WornBulk>1</WornBulk>
					<Mass>1.5</Mass>
				</value>
			</li>
			<!-- ========== Tier 2 Class (Heavy) ========== -->
			<li Class="PatchOperationAdd">
				<xpath>/Defs/ThingDef[@Name="MedTimes_HandArmour_T2_H"]/statBases</xpath>
				<value>
					<Bulk>3</Bulk>
					<WornBulk>1.5</WornBulk>
					<Mass>2.5</Mass>
				</value>
			</li>
		</operations>
	</Operation>

</Patch>
