<?xml version='1.0' encoding='utf-8'?>

<Patch>
	<Operation Class="PatchOperationFindMod">
    <mods>
		<li>Medieval Times</li>
    </mods>
		<match Class="PatchOperationSequence">
		<operations>
		 
		<!--  Restore Combat Extended Power Armor Values  -->
		<li Class="PatchOperationReplace">
			<xpath>Defs/ThingDef[defName="Apparel_PowerArmor"]/statBases/ArmorRating_Sharp</xpath>
			<value>
				<ArmorRating_Sharp>20</ArmorRating_Sharp>
			</value>
		</li>

		<li Class="PatchOperationReplace">
			<xpath>Defs/ThingDef[defName="Apparel_PowerArmor"]/statBases/ArmorRating_Blunt</xpath>
			<value>
				<ArmorRating_Blunt>45</ArmorRating_Blunt>
			</value>
		</li>
		
		</operations>
		</match>
	</Operation>
</Patch>
