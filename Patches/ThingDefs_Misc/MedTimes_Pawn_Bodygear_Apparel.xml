<Patch>
  <!--  ApparalBase remove Mass  -->
  <!--   <Operation Class="PatchOperationRemove">
    <xpath>/Defs/ThingDef[@Name="MedTimes_ApparelBase"]/statBases/Mass</xpath>
  </Operation> -->
  <!-- (Medieval) Makeable Tabard (Class) -->
  <Operation Class="PatchOperationAdd">
    <xpath>/Defs/ThingDef[@Name="MedTimes_Tail_ApparelTabard"]</xpath>
    <value>
      <statBases>
        <Bulk>3.5</Bulk>
        <WornBulk>1.5</WornBulk>
        <Mass>1.5</Mass>
      </statBases>
    </value>
  </Operation>
  <!-- Apparel Medieval Base -->
  <Operation Class="PatchOperationAdd">
    <xpath>/Defs/ThingDef[@Name="MedTimes_Apparel_Tier1"]/statBases</xpath>
    <value>
      <Bulk>4</Bulk>
      <WornBulk>1.5</WornBulk>
      <Mass>3</Mass>
    </value>
  </Operation>
  <!-- Tailored Apparel Medieval Large Base -->
  <Operation Class="PatchOperationAdd">
    <xpath>/Defs/ThingDef[@Name="MedTimes_ApparelJacket"]/statBases</xpath>
    <value>
      <Bulk>4</Bulk>
      <WornBulk>2</WornBulk>
      <Mass>2.5</Mass>
    </value>
  </Operation>
  
  <!-- Shell Layer  -->
  
  <!-- Medieval Cloak: Cold Apparel -->
  <Operation Class="PatchOperationAdd">
    <xpath>/Defs/ThingDef[defName="MedTimes_ShellBody_Cloak"]/statBases</xpath>
    <value>
      <Bulk>4.5</Bulk>
      <WornBulk>3</WornBulk>
      <Mass>2.5</Mass>
    </value>
  </Operation>

  <!-- Medieval Cape: Hot Apparel -->
  <Operation Class="PatchOperationAdd">
    <xpath>/Defs/ThingDef[defName="MedTimes_ShellBody_Cape"]/statBases</xpath>
    <value>
      <Bulk>3.5</Bulk>
      <WornBulk>2</WornBulk>
      <Mass>2</Mass>
    </value>
  </Operation>

</Patch>
